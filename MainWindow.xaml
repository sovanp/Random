<Window x:Class="AutomationScriptWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Automation Script Utility" Height="200" Width="400">
    <Grid>
        <Label Content="Folder Path:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox Name="FolderPathTextBox" HorizontalAlignment="Left" Height="23" Margin="100,10,0,0" VerticalAlignment="Top" Width="200"/>
        <Button Content="Browse..." HorizontalAlignment="Left" Margin="310,10,0,0" VerticalAlignment="Top" Width="60" Click="BrowseFolderButton_Click"/>

        <Label Content="File Extension:" HorizontalAlignment="Left" Margin="10,40,0,0" VerticalAlignment="Top"/>
        <TextBox Name="FileExtensionTextBox" HorizontalAlignment="Left" Height="23" Margin="100,40,0,0" VerticalAlignment="Top" Width="200"/>

        <Label Content="CSV File Path:" HorizontalAlignment="Left" Margin="10,70,0,0" VerticalAlignment="Top"/>
        <TextBox Name="CSVFilePathTextBox" HorizontalAlignment="Left" Height="23" Margin="100,70,0,0" VerticalAlignment="Top" Width="200"/>
        <Button Content="Browse..." HorizontalAlignment="Left" Margin="310,70,0,0" VerticalAlignment="Top" Width="60" Click="BrowseCSVButton_Click"/>

        <Button Content="Process" HorizontalAlignment="Left" Margin="10,100,0,0" VerticalAlignment="Top" Width="360" Click="ProcessButton_Click"/>
    </Grid>
</Window>
